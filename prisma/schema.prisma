generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Producto {
  id            String  @id @default(cuid())
  nombre        String
  descripcion   String?
  categoria     Categoria @relation(fields: [categoriaId], references: [id])
  categoriaId   String
  precio        Float
  imagen        String
  slug          String  @unique
}


model Categoria {
  id            String  @id @default(cuid())
  nombre        String
  slug          String  @unique
  productos     Producto[]
}